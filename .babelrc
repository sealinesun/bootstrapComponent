{
  "presets": [
    ["es2015", { "loose": true }],
    "stage-1",
    "react"
  ],
  "plugins": [
    "dev-expression",
    "transform-runtime",
    "transform-es3-member-expression-literals",
    "transform-es3-property-literals",
    "add-module-exports"
  ],

  "env": {
    "test": {
      "plugins": ["istanbul"]
    }
  }
}
